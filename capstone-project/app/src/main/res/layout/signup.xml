<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"

    >


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/reg_mobile"
        android:imeOptions="actionDone"
        android:hint="Email Address"
        android:gravity="center"

        android:singleLine="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:fontFamily="@font/open_sans_italic"
        android:gravity="center"
        android:text="Sign Up Page"
        android:textColor="@color/White"
        android:textSize="22sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reg_first"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:imeOptions="actionDone"
        android:layout_marginTop="30sp"
        android:layout_below="@id/textView"
        android:hint="First Name"
        android:gravity="center"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reg_last"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:imeOptions="actionDone"
        android:layout_below="@id/reg_mid"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Last Name"
        android:gravity="center"

        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reg_mid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:imeOptions="actionDone"
        android:layout_below="@id/reg_first"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Middle Name"
        android:gravity="center"

        android:singleLine="true" />
    <EditText
        android:id="@+id/reg_mobile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/reg_last"
        android:ems="10"
        android:hint="Mobile Number"
        android:gravity="center"

        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="phone"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:imeOptions="actionDone"
        android:layout_below="@id/reg_email"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Re-enter Email Address"
        android:gravity="center"

        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/textInputEditText2"
        android:hint="Password"
        android:gravity="center"

        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:imeOptions="actionDone"
        android:layout_below="@id/reg_password"
        android:hint="Re-enter Password"
        android:gravity="center"

        android:singleLine="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputEditText"
        android:background="@color/material_on_primary_disabled"
        android:layout_marginTop="30dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        >


        <Button
            android:id="@+id/btn_register"
            android:layout_width="101dp"
            android:layout_height="wrap_content"

            android:background="@drawable/round"

            android:layout_marginStart="250dp"

            android:fontFamily="@font/open_sans_italic"
            android:text="SIGN UP"
            android:textColor="@color/Blue"
            />

        <Button
            android:id="@+id/homebutton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round"
            android:fontFamily="@font/open_sans_italic"
            android:text="Cancel"

            android:textColor="@color/Blue"
           />
    </FrameLayout>



</RelativeLayout>